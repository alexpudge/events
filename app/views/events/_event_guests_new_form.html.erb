<!-- Form interest start -->
<%= form_with(model: @interest, local: true) do |f| %>
<!-- Form interest end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for event_id start -->
  <!-- Input for event_id start -->
  <%= f.hidden_field :event_id, value: @event.id %>
  <!-- Input for event_id end -->
  <!-- Label and input for event_id end -->

  <!-- Label and input for response start -->
  <div class="form-group">
    <%= f.label :response %>

    <!-- Input for response start -->
    <%= f.text_field :response, class: "form-control" %>
    <!-- Input for response end -->
  </div>
  <!-- Label and input for response end -->

  <%= f.submit "Create interest", class: "btn btn-block btn-outline-secondary" %>
<% end %>
