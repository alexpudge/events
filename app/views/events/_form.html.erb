<% was_validated = event.errors.any? %>

<%= form_with(model: event, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% start_date_class = "form-control" %>
    <% start_date_was_invalid = event.errors.include?(:start_date) %>

    <% if was_validated %>
      <% if start_date_was_invalid %>
        <% start_date_class << " is-invalid" %>
      <% else %>
        <% start_date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :start_date %>
    <%= f.date_select :start_date, class: start_date_class, placeholder: "Enter start date" %>
    <% if start_date_was_invalid %>
      <% event.errors.full_messages_for(:start_date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% start_time_class = "form-control" %>
