<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Guests

    <a data-toggle="collapse" href="#event_guests_new_form">
      Add interest
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.guests.each do |interest| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interest, interest %>

        <% if current_user == interest.guest %>
          <%= link_to interest, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_guests_new_form">
        <%= render partial: "events/event_guests_new_form" %>
      </div>
    </div>

  </ul>
</div>
