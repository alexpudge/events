<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Guests

    <a data-toggle="collapse" href="#event_guests_new_form">
      Add interest
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.guests.each do |interest| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to interest, interest %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to interest, method: :delete, data: { confirm: "Do you really want to delete this interest" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_guests_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
