<div class="card mb-3">
  <h2 class="card-header h4">
    Interest #<%= interest.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @interest.guest.present? %>
          <%= link_to interest.guest, interest.guest %>
        <% end %>
      </dd>

      <dt>Event</dt>
      <dd>
        <% if @interest.event.present? %>
          <%= link_to interest.event, interest.event %>
        <% end %>
      </dd>

      <dt>Response</dt>
      <dd><%= interest.response %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back interest, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @interest.guest %>
          <%= link_to edit_interest_url(interest), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @interest.guest %>
          <%= link_to interest, method: :delete, data: { confirm: "Do you really want to delete this interest?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(interest.updated_at) %> ago
  </div>
</div>
