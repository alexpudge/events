<%= form_with(model: @event, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :start_date %>

    <%= f.date_select :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %>

    <%= f.text_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>

    <%= f.date_select :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>

    <%= f.text_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>

    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>

    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status %>

    <%= f.text_field :status, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create event", class: "btn btn-block btn-outline-secondary" %>
<% end %>
