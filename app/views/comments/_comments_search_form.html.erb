<%= search_form_for @q, :class => collapse_search_form, :id => "comments_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :commenter_email_cont, "Commenter email contains" %>
    <%= f.text_field :commenter_email_cont, :class => "form-control", :placeholder => "Commenter email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Event Start date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='comment_boardgteqstart_datePicker' data-target-input="nearest">
          <%= f.text_field :comment_board_start_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Event Start date greater than or equal to", :data => {:target => '#comment_boardgteqstart_datePicker'} %>
          <div class="input-group-append" data-target='#comment_boardgteqstart_datePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='comment_boardlteqstart_datePicker' data-target-input="nearest">
          <%= f.text_field :comment_board_start_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Event Start date less than or equal to", :data => {:target => '#comment_boardlteqstart_datePicker'} %>
          <div class="input-group-append" data-target='#comment_boardlteqstart_datePicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#comment_boardgteqstart_datePicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#comment_boardlteqstart_datePicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#comment_boardgteqstart_datePicker').on("dp.change", function (e) {
              $('#comment_boardlteqstart_datePicker').data("DateTimePicker").minDate(e.date);
          });
          $('#comment_boardlteqstart_datePicker').on("dp.change", function (e) {
              $('#comment_boardgteqstart_datePicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/comments" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#comments_filters">
  Show filters
</a>
